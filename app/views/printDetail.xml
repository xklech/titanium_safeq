<Alloy>
	<Window class="container" onOpen="openWindow" title="L('job_detail_title')">
 		<ScrollView class="scroll">		
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_name')" />
				</View>
				<View class="nameContainer">
					<Label id="detailName" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_type')"/>
				</View>
				<View class="nameContainer">
					<Label id="detailType" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_size')" />
				</View>
				<View class="nameContainer">
					<Label id="detailSize" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_added')" />
				</View>
				<View class="nameContainer">
					<Label id="detailAdded" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_black_white')" />
				</View>
				<View class="nameContainer">
					<Label id="detailBWPages" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_color_pages')" />
				</View>
				<View class="nameContainer">
					<Label id="detailColorPages" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_owner')" />
				</View>
				<View class="nameContainer">
					<Label id="detailOwner" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_paper_size')" />
				</View>
				<View class="nameContainer">
					<Label id="detailPaperSize" class="valueClass"></Label>
				</View>
			</View>
			<View class="horizontal" bottom="10">
				<View class="nameContainer">
					<Label class="nameClass" text="L('job_detail_favorite')" />
				</View>
				<View class="nameContainer">
					<Label id="detailFavorite" class="valueClass"></Label>
				</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>